{
  "manifest_version": 3,
  "name": "PasteKeeper : Clipboard Manager",
  "version": "1.0.0",
  "description": "A productivity tool to efficiently manage your clipboard history.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "scripting",
    "system.display",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}